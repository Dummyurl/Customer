<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_checked="true">
    <shape android:shape="rectangle">
        <solid android:color="@color/radio_btn_active_color"/>
        <corners android:radius="@dimen/dp_0" />

        <padding
            android:bottom="10dp"
            android:top="10dp"
            android:left="10dp"
            android:right="10dp"/>

    </shape>
</item>

<item>
    <shape android:shape="rectangle">
        <solid android:color="@color/radio_btn_inactive_color" />
        <corners android:radius="@dimen/dp_0" />

        <padding
            android:bottom="10dp"
            android:top="10dp"
            android:left="10dp"
            android:right="10dp"/>

    </shape>
</item>

</selector>