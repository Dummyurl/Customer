<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res/android">

    <data>


    </data>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg_color"
    tools:context="com.thimble.customer.activity.EditDateTimeAddressActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorAccent"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetEnd="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:titleTextAppearance="@style/ToolbarTextAppearance"
        app:title="@string/customer_profile_page_title" />

    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="@dimen/dp_60"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.thimble.customer.view.TypedfaceTextView
                android:id="@+id/tvOutSide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:textSize="@dimen/sp_18"
                android:text="@string/entry_hours"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdbSunday"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_0.5"
                    android:background="@drawable/rdb_week_day"
                    android:gravity="center"
                    android:button="@null"
                    android:textAllCaps="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@android:color/white"
                    android:text="SUN"/>

                <RadioButton
                    android:id="@+id/rdbMonday"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_0.5"
                    android:layout_marginLeft="@dimen/dp_0.5"
                    android:background="@drawable/rdb_week_day"
                    android:gravity="center"
                    android:button="@null"
                    android:textAllCaps="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@android:color/white"
                    android:text="MON"/>

                <RadioButton
                    android:id="@+id/rdbTuesday"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_0.5"
                    android:layout_marginLeft="@dimen/dp_0.5"
                    android:background="@drawable/rdb_week_day"
                    android:gravity="center"
                    android:button="@null"
                    android:textAllCaps="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@android:color/white"
                    android:text="TUE"/>

                <RadioButton
                    android:id="@+id/rdbWednesday"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_0.5"
                    android:layout_marginLeft="@dimen/dp_0.5"
                    android:background="@drawable/rdb_week_day"
                    android:gravity="center"
                    android:button="@null"
                    android:textAllCaps="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@android:color/white"
                    android:text="WED"/>

                <RadioButton
                    android:id="@+id/rdbThursday"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_0.5"
                    android:layout_marginLeft="@dimen/dp_0.5"
                    android:background="@drawable/rdb_week_day"
                    android:gravity="center"
                    android:button="@null"
                    android:textAllCaps="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@android:color/white"
                    android:text="THU"/>

                <RadioButton
                    android:id="@+id/rdbFriday"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_0.5"
                    android:layout_marginLeft="@dimen/dp_0.5"
                    android:background="@drawable/rdb_week_day"
                    android:gravity="center"
                    android:button="@null"
                    android:textAllCaps="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@android:color/white"
                    android:text="FRI"/>

                <RadioButton
                    android:id="@+id/rdbSaturday"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_0.5"
                    android:background="@drawable/rdb_week_day"
                    android:gravity="center"
                    android:button="@null"
                    android:textAllCaps="true"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@android:color/white"
                    android:text="SAT"/>

            </RadioGroup>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal"
                android:background="@color/radio_btn_active_color">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical">

                    <com.thimble.customer.view.TypedfaceTextView
                        android:id="@+id/tvFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:text="@string/time_from" />

                    <com.thimble.customer.view.TypedfaceTextView
                        android:id="@+id/tvTimeFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:gravity="center_vertical"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_24"
                        android:text="00:00 AM" />

                    <com.thimble.customer.view.TypedfaceTextView
                        android:id="@+id/tvTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_5"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:text="@string/time_to" />

                    <com.thimble.customer.view.TypedfaceTextView
                        android:id="@+id/tvTimeTo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:onClick="onClick"
                        android:gravity="center_vertical"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp_24"
                        android:text="00:00 AM" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/dp_30"
                android:paddingBottom="@dimen/dp_30"
                android:paddingLeft="@dimen/dp_50"
                android:paddingRight="@dimen/dp_50">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/dp_100"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:padding="@dimen/dp_10"
                    android:background="@drawable/edt_round_bg">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_map_marker"/>

                    <EditText
                        android:id="@+id/etCustName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_10"
                        android:paddingRight="@dimen/dp_10"
                        android:background="@null"
                        android:gravity="start"
                        android:hint="@string/cust_name_hint"
                        android:textSize="@dimen/sp_13"/>

                </LinearLayout>

                <EditText
                    android:id="@+id/etPh"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:padding="@dimen/dp_5"
                    android:drawableLeft="@drawable/ic_phone"
                    android:drawablePadding="@dimen/dp_10"
                    android:background="@drawable/edt_round_bg"
                    android:hint="@string/phone_hint"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text_color2" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:padding="@dimen/dp_5"
                    android:drawableLeft="@drawable/ic_email"
                    android:drawablePadding="@dimen/dp_10"
                    android:background="@drawable/edt_round_bg"
                    android:hint="@string/email_hint"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text_color2" />

                <EditText
                    android:id="@+id/etWeb"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingLeft="7.5dp"
                    android:paddingRight="@dimen/dp_5"
                    android:drawableLeft="@drawable/ic_web"
                    android:drawablePadding="@dimen/dp_10"
                    android:background="@drawable/edt_round_bg"
                    android:hint="@string/web_hint"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/text_color2" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="bottom"
        app:cardElevation="@dimen/dp_4"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/page_bg_color">

            <TextView
                android:id="@+id/tvSave"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_0.5"
                android:paddingTop="@dimen/dp_10"
                android:drawableTop="@drawable/ic_save"
                android:foreground="?attr/selectableItemBackground"
                android:background="@android:color/white"
                android:clickable="true"
                android:onClick="onClick"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:text="@string/save"/>

            <TextView
                android:id="@+id/tvCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_0.5"
                android:paddingTop="@dimen/dp_10"
                android:drawableTop="@drawable/ic_cancel"
                android:foreground="?attr/selectableItemBackground"
                android:background="@android:color/white"
                android:clickable="true"
                android:onClick="onClick"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:text="@string/cancel"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>
</layout>
